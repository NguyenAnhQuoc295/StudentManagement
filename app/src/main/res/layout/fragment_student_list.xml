<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundSepia"
    tools:context=".student.StudentListFragment">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewStudents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/search_view_background"
        app:queryHint="Tìm kiếm sinh viên..."
        app:iconifiedByDefault="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnSortStudents" />

    <ImageButton
        android:id="@+id/btnSortStudents"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_sort" android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/colorAccentGolden"
        android:padding="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/searchViewStudents"
        app:layout_constraintBottom_toBottomOf="@id/searchViewStudents"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Sắp xếp danh sách" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvStudents"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/searchViewStudents"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_student" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add" app:backgroundTint="@color/colorAccentGolden"
        app:tint="@color/colorBackgroundSepia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Thêm sinh viên mới" />

</androidx.constraintlayout.widget.ConstraintLayout>