<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#4E342E"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_certificate"
            app:tint="@color/colorAccentGolden"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvCertificateName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chứng chỉ Lập trình Android"
                android:textColor="@color/colorTextCream"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCertificateDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày cấp: 10/10/2023"
                android:textColor="@color/colorHintSepia"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnEditCertificate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/colorHintSepia"
            android:contentDescription="Sửa" />

        <ImageButton
            android:id="@+id/btnDeleteCertificate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/colorHintSepia"
            android:contentDescription="Xóa" />

    </LinearLayout>
</androidx.cardview.widget.CardView>