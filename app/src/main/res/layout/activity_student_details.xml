<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundSepia"
    tools:context=".student.StudentDetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundSepia">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarDetail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Tên Sinh Viên"
            app:titleTextColor="@color/colorTextCream"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/colorTextCream" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgStudentDetail"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_profile"
            app:civ_border_color="@color/colorAccentGolden"
            app:civ_border_width="2dp" />

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvDetailAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuổi: 21"
                android:textColor="@color/colorTextCream"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_age"
                android:drawablePadding="8dp"
                app:drawableTint="@color/colorAccentGolden" />

            <TextView
                android:id="@+id/tvDetailPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SĐT: 0909123456"
                android:textColor="@color/colorTextCream"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                app:drawableStartCompat="@drawable/ic_phone"
                android:drawablePadding="8dp"
                app:drawableTint="@color/colorAccentGolden" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnEditStudent"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Sửa Thông Tin"
                    android:textColor="@color/colorAccentGolden"
                    app:strokeColor="@color/colorAccentGolden"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnDeleteStudent"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Xóa Sinh Viên"
                    android:textColor="@color/colorBackgroundSepia"
                    app:backgroundTint="@color/colorAccentGolden"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quản lý Chứng chỉ"
                android:textColor="@color/colorTextCream"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/layoutCertificateActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnImportCertificates"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Nhập (CSV)"
                    android:textColor="@color/colorAccentGolden"/>

                <Button
                    android:id="@+id/btnExportCertificates"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Xuất (CSV)"
                    android:textColor="@color/colorAccentGolden"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCertificates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_certificate"
                tools:minHeight="100dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddCertificate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/colorAccentGolden"
        app:tint="@color/colorBackgroundSepia"
        android:contentDescription="Thêm chứng chỉ" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>