<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundSepia"
    tools:context=".student.AddEditStudentActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarAddEditStudent"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBackgroundSepia"
        app:title="Thêm Sinh Viên Mới"
        app:titleTextColor="@color/colorTextCream"
        app:navigationIcon="@drawable/ic_arrow_back" app:navigationIconTint="@color/colorTextCream"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgStudentProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_profile" app:civ_border_width="2dp"
        app:civ_border_color="@color/colorAccentGolden"
        app:layout_constraintTop_toBottomOf="@id/toolbarAddEditStudent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvChangeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn ảnh đại diện"
        android:textColor="@color/colorAccentGolden"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/imgStudentProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilStudentName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:textColorHint="@color/colorHintSepia"
        app:boxStrokeColor="@color/colorAccentGolden"
        app:hintTextColor="@color/colorAccentGolden"
        app:layout_constraintTop_toBottomOf="@id/tvChangeImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etStudentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên sinh viên"
            android:textColor="@color/colorTextCream"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilStudentAge"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColorHint="@color/colorHintSepia"
        app:boxStrokeColor="@color/colorAccentGolden"
        app:hintTextColor="@color/colorAccentGolden"
        app:layout_constraintTop_toBottomOf="@id/tilStudentName"
        app:layout_constraintStart_toStartOf="@id/tilStudentName"
        app:layout_constraintEnd_toEndOf="@id/tilStudentName">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etStudentAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tuổi"
            android:textColor="@color/colorTextCream"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilStudentPhone"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColorHint="@color/colorHintSepia"
        app:boxStrokeColor="@color/colorAccentGolden"
        app:hintTextColor="@color/colorAccentGolden"
        app:layout_constraintTop_toBottomOf="@id/tilStudentAge"
        app:layout_constraintStart_toStartOf="@id/tilStudentName"
        app:layout_constraintEnd_toEndOf="@id/tilStudentName">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etStudentPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:textColor="@color/colorTextCream"
            android:inputType="phone" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnSaveStudent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lưu lại"
        android:layout_marginTop="32dp"
        android:padding="12dp"
        app:backgroundTint="@color/colorAccentGolden"
        android:textColor="@color/colorBackgroundSepia"
        app:layout_constraintTop_toBottomOf="@id/tilStudentPhone"
        app:layout_constraintStart_toStartOf="@id/tilStudentName"
        app:layout_constraintEnd_toEndOf="@id/tilStudentName" />

</androidx.constraintlayout.widget.ConstraintLayout>