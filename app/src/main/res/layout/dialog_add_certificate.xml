<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/colorBackgroundSepia">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm Chứng Chỉ Mới"
        android:textColor="@color/colorTextCream"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilCertificateName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorHintSepia"
        app:boxStrokeColor="@color/colorAccentGolden"
        app:hintTextColor="@color/colorAccentGolden">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCertificateName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên chứng chỉ (ví dụ: TOEIC 800)"
            android:textColor="@color/colorTextCream"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilCertificateDate"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColorHint="@color/colorHintSepia"
        app:boxStrokeColor="@color/colorAccentGolden"
        app:hintTextColor="@color/colorAccentGolden">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCertificateDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày cấp (ví dụ: 10/10/2023)"
            android:textColor="@color/colorTextCream"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>