<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="#4E342E"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgUserItem"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_profile" app:civ_border_color="@color/colorAccentGolden"
            app:civ_border_width="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvUserNameItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Tên Người Dùng"
            android:textColor="@color/colorTextCream"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imgUserItem"
            app:layout_constraintTop_toTopOf="@id/imgUserItem"
            app:layout_constraintEnd_toStartOf="@id/btnDeleteUser"/>

        <TextView
            android:id="@+id/tvUserRoleItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Vai trò: Manager"
            android:textColor="@color/colorHintSepia"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tvUserNameItem"
            app:layout_constraintTop_toBottomOf="@id/tvUserNameItem" />

        <TextView
            android:id="@+id/tvUserStatusItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Trạng thái: Normal"
            android:textColor="@color/colorAccentGolden"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tvUserNameItem"
            app:layout_constraintTop_toBottomOf="@id/tvUserRoleItem" />

        <ImageButton
            android:id="@+id/btnDeleteUser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete" android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/colorHintSepia"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Xóa" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>